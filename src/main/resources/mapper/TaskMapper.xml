<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.haha.gcmp.repository.TaskMapper">

    <resultMap id="fullTask" type="com.haha.gcmp.model.entity.Task">
        <id property="id" column="id"/>
        <result property="cmd" column="cmd"/>
        <result property="status" column="status"/>
        <result property="serverId" column="server_id"/>
        <result property="gpus" column="gpus"/>
        <result property="imageId" column="image_id"/>
        <result property="podName" column="pod_name"/>
        <result property="userId" column="user_id"/>
    </resultMap>
    <select id="getById" resultMap="fullTask">
        select id,cmd,status,server_id,gpus,image_id,pod_name,user_id from task where id = #{id}
    </select>

    <select id="listByUserId" resultMap="fullTask">
        select id,cmd,status,server_id,gpus,image_id,pod_name,user_id from task where user_id = #{userId}
    </select>

    <select id="listAll" resultMap="fullTask">
        select id,cmd,status,server_id,gpus,image_id,pod_name,user_id from task
    </select>

    <insert id="insert">
        insert into task (cmd,status,server_id,gpus,image_id,pod_name,user_id)
        values (#{cmd}, #{status}, #{serverId}, #{gpus},#{imageId},#{podName},#{userId})
    </insert>


    <delete id="removeById">
        delete from task where id = #{id}
    </delete>

    <update id="updateStatus">
        update task set status = #{status} where id = #{id}
    </update>

    <update id="casUpdateRemoved">
        update task set removed = 1 where id = #{id} and removed=0
    </update>

    <update id="casUpdateStatus">
        update task set status = #{status} where id = #{id} and status="running"
    </update>

</mapper>